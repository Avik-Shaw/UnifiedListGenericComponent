<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<masterLabel>Unified List</masterLabel>
	<apiVersion>62.0</apiVersion>
	<description>It can display a list of data like a related list based upon a simple JSON data structure containing the Column Header and Records, from any unrelated data source</description>
	<isExposed>true</isExposed>
	<runtimeNamespace>omnistudio</runtimeNamespace>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__RecordPage</target>
		<target>lightning__FlowScreen</target>
		<target>lightningCommunity__Default</target>
		<target>lightningCommunity__Page</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage,lightning__FlowScreen,lightningCommunity__Default">
			<property name="title" label="Enter the List Title" type="String" default=""/>
			<property name="iconName" label="Enter the List Icon Name(slds-standard-icon)" type="String" default="standard:budget"/>
			<property name="classinterfaceName" label="Enter the Apex Class Name" type="String" default=""/>
			<property name="methodName" label="Enter the Apex Method Name" type="String" default=""/>
            <property name="pageSize" type="Integer" description="Number of records per page." default="10"/>
			<property name="isSalesforceData" label="Is the Data from Salesforce(and contains Id)" type="Boolean"/>
			<property name="hoverColumns" label="Enter Hover Layout Columns(if required, comma-separated, atmost 7)" type="String"/>
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>